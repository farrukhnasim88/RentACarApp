@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";

}
@{ 
    if (Model.ReturnUrl == null)
    {
        Model.ReturnUrl = ViewData["url"].ToString();

    }
}
 
    <h4 class="text-center"> <a class="mr-2"  asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">Log in</a>/<a class="bg-light mr-2" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register </a></h4>
<p>Thank you for registering your account.</p>
  

<div class="row jumbotron">
    <div class="col-lg-12 d-flex justify-content-center ">
        <section>
            <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <h4>Create a new account.</h4>
                <hr />
                <small class="bg-light text-info">*All fields are mandatory.</small><br />
                <small class="bg-light text-info">*Password must be minimum 6 characters, at least one capital letter, one special character and a numerical.</small>
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Input.FirstName"></label><label>*</label>
                    <input asp-for="Input.FirstName" class="form-control" />
                    <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.LastName"></label><label>*</label>
                    <input asp-for="Input.LastName" class="form-control" />
                    <span asp-validation-for="Input.LastName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Mobile"></label><label>*</label>
                    <input asp-for="Input.Mobile" class="form-control" />
                    <span asp-validation-for="Input.Mobile" class="text-danger"></span>
                </div>


                <div class="form-group">
                    <label asp-for="Input.LicenceNo"></label><label>*</label>
                    <input asp-for="Input.LicenceNo" class="form-control" />
                    <span asp-validation-for="Input.LicenceNo" class="text-danger"></span>
                </div>


                <div class="form-group">
                    <label asp-for="Input.Address"></label><label>*</label>
                    <input asp-for="Input.Address" class="form-control" />
                    <span asp-validation-for="Input.Address" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Input.Email"></label><label>*</label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password"></label><label>*</label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.ConfirmPassword"></label><label>*</label>
                    <input asp-for="Input.ConfirmPassword" class="form-control" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>


                <button type="submit" class="btn btn-dark btn-lg btn-block">Register</button>

            </form>
        </section>
    </div>
    
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
