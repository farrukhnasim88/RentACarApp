 
@model RentACarApp.Models.Booking

@{
    ViewData["Title"] = "GetBooking";
}

<h1>Make A Booking</h1>

<h4>Please select Dates and location for Booking</h4>
<hr />
<div class="row">

    <div class="col-md-5">
        <form asp-action="GetBookingPost">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="HireDate" class="control-label"></label>
                <input asp-for="HireDate" class="form-control" type="date" />
                <span asp-validation-for="HireDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReturnDate" class="control-label"></label>
                <input asp-for="ReturnDate" class=" form-control" />
                <span asp-validation-for="ReturnDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Location" class="control-label"></label>
                <select asp-for="LocationId" class="form-control" asp-items="ViewBag.LocationId">
                    <option value="">-- Select Location --</option>
                </select>
                <span asp-validation-for="LocationId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Find Cars" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <div class="col-md-5">
        <img src="~/images/VW.webp" class=" h-100 w-100 border-info" />
    </div>
</div>
@section Scripts
{
    <script>
        $(document).ready(function () {
            $('#HireDate').attr('min', new Date().toISOString().split('T')[0]);
            $('#HireDate').change(function () {
                $('#ReturnDate').attr('min', $('#HireDate').val());
            })
        })

    </script>
}
 