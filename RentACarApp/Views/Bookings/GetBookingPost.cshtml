@model IEnumerable<RentACarApp.Models.Vehicle>

@{
    ViewData["Title"] = "GetVehiclesPost";
}

<h1>Select Vehicle</h1>

<p>
    <a asp-action="Create"> Vehicle</a>
</p>


@using (Html.BeginForm("Confirm", "Bookings"))
{
    <input type="hidden"  value="@ViewBag.HireDate" id="HireDate"  />
    <input type="hidden" value="@ViewBag.ReturnDate" id="ReturnDate" name="HireDate" />
    <input type="hidden"  value="@ViewBag.LocationId" id="locationId"  name="locationId"/>
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Make)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Model)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Year)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Kilometer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImageUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Color)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RatePerDay)
            </th>
            <th></th>
        </tr>
        <tr>
            <td>
                <input type="hidden" value="@ViewBag.HireDate" id="HireDate" />
                <input type="hidden" value="@ViewBag.ReturnDate" id="ReturnDate" name="HireDate" />
                <input type="hidden" value="@ViewBag.LocationId" id="locationId" name="locationId" />
            </td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Make)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Model)

                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Year)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Kilometer)
                </td>
                <td>
                    <img src="@item.ImageUrl" class="w-50 h-50" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Color)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RatePerDay)
                </td>
                <td>
                    @{ 
                        var myreturnurl = "~/Bookings/MyConfirm?vehicleId=" + @item.Id;
                    }
                    <a id="login"  asp-route-returnurl="@myreturnurl" asp-route-vehicleId="BAC123" asp-area="Identity" asp-page="/Account/Login">Checkout</a> |
                    <a asp-action="Confirm" asp-route-vehicleId="@item.Id" asp-route-hdate="@ViewBag.HireDate" asp-route-rdate="@ViewBag.ReturnDate" asp-route-location="@ViewBag.LocationId">Confirm</a> |
                    <a asp-action="GetBookingPost" asp-route-id="@item.Id">Back</a> |

                </td>
            </tr>
        }
    </tbody>
</table>

