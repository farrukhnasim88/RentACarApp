@model IEnumerable<RentACarApp.ViewModels.VehiclesViewModel>
@using Microsoft.AspNetCore.Identity
@inject SignInManager<RentACarApp.Areas.Identity.Data.RentACarAppUser> SignInManager

@{
    ViewData["Title"] = "GetBookingPost";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Available Vehicle List</h1>

 
<table class="table">
    <thead>
        <tr>
           
            <th>
                @Html.DisplayNameFor(model => model.Make)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Model)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Year)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Kilometer)
            </th>
            <th>
                Image
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Color)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            
            <td>
                @Html.DisplayFor(modelItem => item.Make)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Model)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Year)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Kilometer)
            </td>
            <td>
                <img src="@item.ImageUrl" class="w-50 h-50" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Color)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @if (SignInManager.IsSignedIn(User))

                {

                    <a asp-route-price="@item.Price" asp-route-vehicleId="@item.Id" asp-controller="Bookings" asp-action="MyConfirm">Select</a>

                }

                else
                {
                     var myreturnurl = "~/Bookings/MyConfirm?vehicleId=" + @item.Id + "&" + "Price=" + @item.Price;
                   

                    <a id="login" asp-route-returnurl="@myreturnurl" asp-route-price="@item.Price" asp-route-vehicleId="@item.Id" asp-area="Identity" asp-page="/Account/Login">Select</a>
                }




            </td>
        </tr>

}
    </tbody>
</table>
